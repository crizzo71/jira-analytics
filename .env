# Jira Analytics Dashboard Configuration

# Jira Configuration
JIRA_BASE_URL=https://issues.redhat.com
JIRA_API_TOKEN=your_personal_access_token_here
JIRA_AUTH_TYPE=bearer

# Project Configuration (comma-separated for multiple projects)
JIRA_PROJECT_KEYS=OCM
JIRA_BOARD_IDS=

# Analytics Configuration
ANALYTICS_REFRESH_INTERVAL=300000
ANALYTICS_MAX_ISSUES=1000
ANALYTICS_DEFAULT_PERIOD_DAYS=30

# Server Configuration
PORT=3000
NODE_ENV=development

# Dashboard Features
ENABLE_REAL_TIME=true
ENABLE_CHARTS=true
ENABLE_EXPORT=true

# Debug Configuration
DEBUG=false
LOG_LEVEL=INFO